<%= header %>
    <form method='post' action='/install/go'>
      <h1>Blorgh Install</h1>
      
      <p>Welcome to the install process for Blorgh.</p>
      
      <strong>Already done this? <a href='/install/done'>Already done!</a></strong>
      
      <h2>Database Information</h2>
      <p>
        <label for='database_adapter'>Adapter</label><br>
        <select id='database_adapter' name='database[adapter]'>
          <option value='mysql'>MySQL</option>
        </select>
      </p>
      
      <p>
        <label for='database_username'>Username</label><br>
        <input type='text' id='database_username' name='database[username]'>
      </p>
      
      <p>
        <label for='database_password'>Password</label><br>
        <input type='password' id='database_password' name='database[password]'>
      </p>
      
      <p>
        <label for='database_database'>Database Name</label><br>
        <input type='text' id='database_database' name='database[database]'>
      </p>
      
      <p>
        <label for='database_socket'>Socket</label><br>
        <input type='text' id='database_socket' name='database[socket]'>
      </p>
      <input type='submit' name='submit' value='Submit'>
    </form>
<%= footer %>