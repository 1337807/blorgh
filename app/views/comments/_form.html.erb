<% if !logged_in? %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :url, "URL" %><br>
    <%= f.text_field :url %>
  </p>
<% end %>
<p>
  <%= f.label :text %><br>
  <%= f.text_area :text, :rows => 5, :cols => 40 %>
</p>

<%= f.submit "Comment" %>